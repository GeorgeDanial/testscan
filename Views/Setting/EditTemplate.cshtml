@model Portal.ViewModels.CustomTemplateViewModel 
@{
    ViewBag.Title = "EditTemplate";
}

<h2>EditTemplate</h2>

<div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">

                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>@ViewBag.Title</h5>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.Hidden("Name");

                        <div class="table-responsive ">
                            <table class="table">
                                <tbody>

                                    <tr>
                                        <td style="width:50%">@Model.Name</td>
                                    </tr>
                                    <tr>
                                        <td style="width:100%">
                                            @Html.TextArea("Value", new { @class = "form-control", style = "width:100%;height:450px" })

                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                            <input type="submit" class="btn btn-primary" value="Save" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>